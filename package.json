{
  "name": "functions",
  "scripts": {
    "test": "jest",
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "yarn build && firebase serve --only functions",
    "shell": "yarn build && firebase functions:shell",
    "start": "yarn shell",
    "predeploy": "rimraf lib && yarn build",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "script:sync-transferwise": "ts-node scripts/sync-transferwise.ts",
    "script:sync-codementor": "ts-node scripts/sync-codementor.ts",
    "script:sync-fidor": "ts-node scripts/sync-fidor.ts",
    "repl": "yarn nodemon --watch 'src/**/*.ts' --watch 'repl/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node'",
    "scraper:watch": "yarn repl src/fidor/scraper.ts",
    "repl:sevdesk": "yarn repl repl/sevdesk-repl.ts",
    "repl:tw": "yarn repl repl/transferwise-repl.ts",
    "repl:codementor": "yarn repl repl/codementor-repl.ts",
    "repl:fidor": "yarn repl repl/fidor-repl.ts"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@mojoio/sevdesk": "^1.5.27",
    "@types/dotenv": "^6.1.1",
    "@types/got": "^9.4.4",
    "@types/puppeteer": "^1.12.4",
    "date-fns": "^2.0.0-alpha.29",
    "dotenv": "^8.0.0",
    "firebase": "^6.3.1",
    "firebase-admin": "^8.3.0",
    "firebase-functions": "^3.2.0",
    "form-data": "^2.5.0",
    "got": "^9.6.0",
    "lodash": "^4.17.19",
    "puppeteer": "^1.17.0",
    "puppeteer-extra": "^2.1.3",
    "puppeteer-extra-plugin-stealth": "^2.2.2",
    "sevdesk": "^0.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/debug": "^4.1.4",
    "@types/jest": "^24.0.15",
    "babel-jest": "^24.8.0",
    "firebase-functions-test": "^0.1.6",
    "firebase-tools": "7.0.2",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.2.0",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "private": true
}
